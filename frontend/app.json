{
  "expo": {
    "name": "Finance Tracker",
    "slug": "finance-tracker",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "financetracker",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "L'app che ti permette di tenere sotto controllo le finanze e di avere suggerimenti su come risparmiare tramite AI",
    "privacy": "public",
    "platforms": [
      "ios",
      "android"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.financetracker.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Questa app ha bisogno di accedere alla fotocamera per scansionare ricevute.",
        "NSPhotoLibraryUsageDescription": "Questa app ha bisogno di accedere alle foto per allegare ricevute."
      }
    },
    "android": {
      "package": "com.financetracker.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#007AFF"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#007AFF"
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-will-be-here"
      }
    }
  }
}
